{
  "name": "@cddo/govuk-status-monitor",
  "version": "1.0.0",
  "description": "GOV.UK Public Services Status Monitor - Self-contained status monitoring with health checks and static HTML generation",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "eleventy && node src/inlining/post-build.js",
    "build:eleventy": "eleventy",
    "start": "node --import tsx/esm src/index.ts",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test",
    "test:accessibility": "playwright test tests/accessibility",
    "test:performance": "echo 'Performance tests not yet implemented (Phase 4+)' && exit 0",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "lint": "eslint . && prettier --check .",
    "lint:fix": "eslint --fix . && prettier --write .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "validate-config": "tsx src/config/validator.ts",
    "check-once": "tsx src/index.ts --once"
  },
  "keywords": [
    "govuk",
    "status-monitor",
    "health-check",
    "static-site-generator",
    "eleventy",
    "accessibility"
  ],
  "author": "Cabinet Office Digital",
  "license": "MIT",
  "engines": {
    "node": ">=22.11.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.17.0",
  "dependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@x-govuk/govuk-eleventy-plugin": "^8.0.4",
    "ajv": "^8.17.1",
    "js-yaml": "^4.1.0",
    "pino": "^10.1.0",
    "prom-client": "^15.1.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@eslint/js": "^9.38.0",
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.9.1",
    "eslint": "^9.38.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vitest": "^2.1.9"
  }
}
