{
  "name": "govuk-status-monitor",
  "version": "1.0.0",
  "description": "GOV.UK Public Services Status Monitor - Static site generator for monitoring service health",
  "type": "module",
  "engines": {
    "node": ">=22.6.0"
  },
  "scripts": {
    "dev": "concurrently \"npm:watch:*\"",
    "watch:monitor": "tsx watch src/cli/monitor.ts",
    "watch:eleventy": "NODE_OPTIONS='--experimental-strip-types' eleventy --config=eleventy.config.ts --serve --incremental",
    "build": "NODE_OPTIONS='--experimental-strip-types' eleventy --config=eleventy.config.ts",
    "start": "NODE_OPTIONS='--experimental-strip-types' node src/cli/monitor.ts",
    "check-once": "tsx src/cli/monitor.ts --once",
    "validate-config": "tsx src/lib/config-validator.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md,yaml,yml}\"",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:contract": "jest --testPathPattern=tests/contract",
    "test:e2e": "playwright test",
    "test:a11y": "jest --testPathPattern=tests/accessibility && pa11y-ci",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:perf": "lighthouse http://localhost:8080 --only-categories=performance",
    "pre-commit": "npm run lint && npm run type-check && npm run test:unit",
    "verify": "node scripts/verify-setup.js"
  },
  "keywords": [
    "govuk",
    "status-monitor",
    "health-check",
    "eleventy",
    "static-site-generator"
  ],
  "author": "Cabinet Office",
  "license": "MIT",
  "dependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@x-govuk/govuk-eleventy-plugin": "^8.0.4",
    "fast-csv": "^5.0.1",
    "pino": "^9.5.0",
    "pino-http": "^10.3.0",
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "axe-core": "^4.10.2",
    "axe-playwright": "^2.0.3",
    "concurrently": "^9.1.2",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.10.0",
    "jest": "^29.7.0",
    "jest-axe": "^9.0.0",
    "lighthouse": "^12.2.1",
    "nunjucks": "^3.2.4",
    "pa11y-ci": "^3.1.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
