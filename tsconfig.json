{
  "compilerOptions": {
    // Module system - Node.js 22 ESM with TypeScript support
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",

    // Node.js 22 native TypeScript support via tsx
    "verbatimModuleSyntax": true,
    // erasableSyntaxOnly removed - too strict for tsx, prevents export type

    // Strict type checking (per constitution.md)
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Module resolution
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,

    // Type checking without emitting files (tsx handles execution)
    "noEmit": true,

    // Output settings
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // Source maps for debugging
    "sourceMap": true,
    "inlineSources": true,

    // Library support
    "lib": ["ESNext", "DOM"],
    "types": ["node"],

    // Path mappings (if needed)
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "eleventy.config.ts",
    "_includes/**/*",
    "_data/**/*"
  ],
  "exclude": [
    "node_modules",
    "_site",
    "dist",
    "output",
    "build",
    "coverage",
    ".github"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
